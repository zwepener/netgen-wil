@model CodeCraft.Web.AdminPortal.Models.DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/jqvmap/css/jqvmap.min.css" />
    <link rel="stylesheet" href="~/lib/chartist/css/chartist.min.css" />
}

<div class="row">
    <div class="col-xl-3 col-xxl-3 col-sm-6">
        <div class="widget-stat card bg-primary overflow-hidden">
            <div class="card-header">
                <h3 class="card-title text-white">Total Students</h3>
                <h5 class="text-white mb-0">
                    <i class="fa fa-caret-up"></i> @Html.DisplayFor(model => model.TotalStudents)
                </h5>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-xxl-3 col-sm-6">
        <div class="widget-stat card bg-success overflow-hidden">
            <div class="card-header">
                <h3 class="card-title text-white">New Students</h3>
                <h5 class="text-white mb-0">
                    <i class="fa fa-caret-up"></i> @Html.DisplayFor(model => model.TotalNewStudents)
                </h5>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-xxl-3 col-sm-6">
        <div class="widget-stat card bg-secondary overflow-hidden">
            <div class="card-header pb-3">
                <h3 class="card-title text-white">Total Course</h3>
                <h5 class="text-white mb-0">
                    <i class="fa fa-caret-up"></i> @Html.DisplayFor(model => model.TotalCourses)
                </h5>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-xxl-3 col-sm-6">
        <div class="widget-stat card bg-danger overflow-hidden">
            <div class="card-header pb-3">
                <h3 class="card-title text-white">New Courses</h3>
                <h5 class="text-white mb-0">
                    <i class="fa fa-caret-up"></i> @Html.DisplayFor(model => model.NewCourses)
                </h5>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">New Students</h4>
                        <a asp-controller="Students" asp-action="Create" class="btn btn-primary">
                            <i class="la la-plus-circle"></i> Add Student
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Student student in Model.Students)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => student.Id)
                                            </td>
                                            <td>
                                                <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id">
                                                    @Html.DisplayFor(modelItem => student.FullName)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => student.User!.Email)
                                            </td>
                                            <td>
                                                <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-eye"></i>
                                                </a>
                                                <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-pencil"></i>
                                                </a>
                                                <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">
                                                    <i class="la la-trash-o"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">New Courses</h4>
                        <a asp-controller="Courses" asp-action="Create" class="btn btn-primary">
                            <i class="la la-plus-circle"></i> Add Course
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Code</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Course course in Model.Courses)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Id)
                                            </td>
                                            <td>
                                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">
                                                    @Html.DisplayFor(modelItem => course.Name)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Code)
                                            </td>
                                            <td>
                                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-eye"></i>
                                                </a>
                                                <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-pencil"></i>
                                                </a>
                                                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">
                                                    <i class="la la-trash-o"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chart.js/Chart.bundle.min.js"></script>
    <script src="~/lib/peity/jquery.peity.min.js"></script>
    <script src="~/lib/jquery-sparkline/jquery.sparkline.min.js"></script>

    <script src="~/js/dashboard/dashboard-3.js" asp-append-version="true"></script>
}