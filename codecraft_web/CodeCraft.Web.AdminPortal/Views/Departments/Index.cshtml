@model IEnumerable<CodeCraft.Data.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>All Departments</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">
                    Departments
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">
                    All
                </a>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Department List</h4>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="la la-plus-circle"></i> Add Department
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example5"
                           class="display"
                           style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Code)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Department department in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => department.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => department.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => department.Code)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-sm btn-primary">
                                            <i class="la la-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-sm btn-primary">
                                            <i class="la la-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-sm btn-danger">
                                            <i class="la la-trash-o"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>