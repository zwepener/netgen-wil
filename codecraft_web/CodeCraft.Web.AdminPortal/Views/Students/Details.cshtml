@model Student

@{
    ViewData["Title"] = "Student Details";
}

<partial name="_BreadCrumbPartial" model="@(new BreadCrumbViewModel
{
    Header = ViewBag.Title,
    SectionName = "Students",
    ActiveName = "Details"
})" />

<div class="row">
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="text-center p-3 overlay-box"
                         style="background-image: url(images/big/img1.jpg)">
                        <div class="profile-photo">
                            <img src="~/images/avatar/default.png" width="100" class="img-fluid rounded-circle" alt="" />
                        </div>
                        <h3 class="mt-3 mb-1 text-white">
                            @Html.DisplayFor(model => model.User!.FullName)
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">About Me</h2>
                    </div>
                    <div class="card-body pb-0">
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and
                            typesetting industry.
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.User!.Gender)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.User!.Gender)
                                </span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.User!.Email)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.User!.Email)
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-block">
                        <h4 class="card-title">
                            @Html.DisplayNameFor(model => model.User!.PhysicalAddress)
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">
                            @Html.DisplayFor(model => model.User!.PhysicalAddress)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="profile-tab">
                    <div class="custom-tab-1">
                        <div class="tab-content">
                            <div id="about-me" class="tab-pane fade active show">
                                <div class="profile-personal-info pt-1">
                                    <h4 class="text-primary mb-4">
                                        Personal Information
                                    </h4>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.User!.FullName) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.User!.FullName)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.User!.Email) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>@Html.DisplayFor(model => model.User!.Email)</span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.User!.Age) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.User!.Age)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.User!.PhysicalAddress) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.User!.PhysicalAddress)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.UpdatedAgo) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.UpdatedAgo)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.CreatedAgo) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.CreatedAgo)
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DataTablePartial" model="@(new DataTableModel {
    Title = "Courses",
    Headers = ["#", "Name", "Code"],
    Rows = Model.Courses.Select(a => new DataTableRowModel {
        Cells = [
            new DataTableCellModel {
                Value = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.Name,
                Controller = "Courses",
                Action = "Details",
                RouteId = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.Code,
            }
        ],
        ItemId = a.Id.ToString()
    }).ToList(),
})" />