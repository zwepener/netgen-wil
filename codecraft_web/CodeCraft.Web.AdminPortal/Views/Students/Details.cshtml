@model CodeCraft.Data.Models.Student

@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>About Student</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">
                    Students
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Details" asp-route-id="@Model!.Id">
                    About
                </a>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="text-center p-3 overlay-box"
                         style="background-image: url(images/big/img1.jpg)">
                        <div class="profile-photo">
                            <img src="~/images/profile/profile.png"
                                 width="100"
                                 class="img-fluid rounded-circle"
                                 alt="" />
                        </div>
                        <h3 class="mt-3 mb-1 text-white">
                            @Html.DisplayFor(model => model.FullName)
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">About Me</h2>
                    </div>
                    <div class="card-body pb-0">
                        <p>
                            Lorem Ipsum is simply dummy text of the printing and
                            typesetting industry.
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.Gender)
                                </span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.User!.Email)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.User!.Email)
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-block">
                        <h4 class="card-title">
                            @Html.DisplayNameFor(model => model.PhysicalAddress)
                        </h4>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">
                            @Html.DisplayFor(model => model.PhysicalAddress)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="profile-tab">
                    <div class="custom-tab-1">
                        <div class="tab-content">
                            <div id="about-me" class="tab-pane fade active show">
                                <div class="profile-personal-info pt-1">
                                    <h4 class="text-primary mb-4">
                                        Personal Information
                                    </h4>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.FullName) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.FullName)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.User!.Email) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>@Html.DisplayFor(model => model.User!.Email)</span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.Age) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.Age)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                                            <h5 class="f-w-500">
                                                @Html.DisplayNameFor(model => model.PhysicalAddress) <span class="pull-right">:</span>
                                            </h5>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                                            <span>
                                                @Html.DisplayFor(model => model.PhysicalAddress)
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-primary">Enrolled Courses</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Course ID</th>
                                        <th>Course Name</th>
                                        <th>Course Code</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Course course in Model.Courses)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Code)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script src="~/js/plugins-init/datatables.init.js"></script>
}