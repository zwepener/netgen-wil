@model Course

@{
    ViewData["Title"] = "Course Details";
}

<partial name="_BreadCrumbPartial" model="@(new BreadCrumbViewModel
{
    Header = ViewBag.Title,
    SectionName = "Courses",
    ActiveName = "Details"
})" />

<div class="row">
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <img class="img-fluid" src="~/images/courses/pic1.jpg" alt="" />
                    <div class="card-body">
                        <h4 class="mb-0">
                            @Html.DisplayFor(model => model.Name)
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            @Html.DisplayNameFor(model => model.Description)
                        </h2>
                    </div>
                    <div class="card-body pb-0">
                        <p>
                            @Html.DisplayFor(model => model.Description)
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.Duration)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.FormattedDuration)
                                </span>
                            </li>
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.Price)
                                </strong>
                                <span class="mb-0">
                                    @if (Model.Price == 0)
                                    {
                                        @("Free")
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.Price)
                                    }
                                </span>
                            </li>
                        </ul>
                    </div>

                    <div class="card-footer pt-0 pb-0 text-center">
                        <div class="row">
                            <div class="col-4 pt-3 pb-3 border-right">
                                <h3 class="mb-1 text-primary">
                                    @Model.Students.Count
                                </h3>
                                <span>Students</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex mw-100 w-100 justify-content-between align-items-center">
                    <h4 class="text-primary">Course Information</h4>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="la la-pencil"></i> Edit
                    </a>
                </div>
                <div class="row mb-4 pt-3">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Name) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Name)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Code) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Code)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Description) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.DifficultyLevel) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.DifficultyLevel)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Duration) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.FormattedDuration)</span>
                    </div>
                </div>
                @if (!String.IsNullOrEmpty(Model.Technologies))
                {
                    <div class="row mb-4">
                        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                            <h5 class="f-w-500">
                                @Html.DisplayNameFor(model => model.Technologies) <span class="pull-right">:</span>
                            </h5>
                        </div>
                        <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                            <span>@(Model.Technologies.Replace(",", ", "))</span>
                        </div>
                    </div>
                }
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Price) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Price)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.ApplicationOpenDate) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.ApplicationOpenDate)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.ApplicationCloseDate) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.ApplicationCloseDate)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DataTablePartial" model="@(new DataTableModel {
    Title = "Course Departments",
    Headers = ["#", "Name", "Code"],
    Rows = Model.Departments.Select(a => new DataTableRowModel {
        Cells = [
            new DataTableCellModel {
                Value = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.Name,
                Controller = "Departments",
                Action = "Details",
                RouteId = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.Code,
            }
        ],
        ItemId = a.Id.ToString()
    }).ToList(),
    MainController = "Departments",
    ViewingEnabled = true,
    EditingEnabled = true,
    DeletingEnabled = true,
})" />

<partial name="_DataTablePartial" model="@(new DataTableModel {
    Title = "Course Instructors",
    Headers = ["#", "Name", "Email"],
    Rows = Model.Instructors.Select(a => new DataTableRowModel {
        Cells = [
            new DataTableCellModel {
                Value = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.User!.FullName,
                Controller = "Instructors",
                Action = "Details",
                RouteId = a.Id.ToString()
            },
            new DataTableCellModel {
                Value = a.User!.Email!,
                Controller = "Users",
                Action = "Details",
                RouteId = a.UserId.ToString()
            }
        ],
        ItemId = a.Id.ToString()
    }).ToList(),
    MainController = "Instructors",
    ViewingEnabled = true,
    EditingEnabled = true,
    DeletingEnabled = true,
})" />