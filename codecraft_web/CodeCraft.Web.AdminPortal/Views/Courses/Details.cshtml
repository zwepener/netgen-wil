@model CodeCraft.Data.Models.Course

@{
    ViewData["Title"] = "Details";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Course Details</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">
                    Courses
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Details" asp-route-id="@Model!.Id">
                    Details
                </a>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 col-xxl-4 col-lg-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <img class="img-fluid"
                         src="~/images/courses/pic1.jpg"
                         alt="" />
                    <div class="card-body">
                        <h4 class="mb-0">
                            @Html.DisplayFor(model => model.Name)
                        </h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            @Html.DisplayNameFor(model => model.Description)
                        </h2>
                    </div>
                    <div class="card-body pb-0">
                        <p>
                            @Html.DisplayFor(model => model.Description)
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.Duration)
                                </strong>
                                <span class="mb-0">
                                    @Html.DisplayFor(model => model.FormattedDuration)
                                </span>
                            </li>
                            <!-- Course Instructors (TODO, might move to card body)
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Instructor</strong>
                                <span class="mb-0">Jimmy Morris</span>
                            </li>
                            -->
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>
                                    @Html.DisplayNameFor(model => model.Price)
                                </strong>
                                <span class="mb-0">
                                    @if (Model.Price == 0)
                                    {
                                        @("Free")
                                    }
                                    else
                                    {
                                        @Html.DisplayNameFor(model => model.Price)
                                    }
                                </span>
                            </li>
                            <!-- Some date (unsure for what)
                            <li class="list-group-item d-flex px-0 justify-content-between">
                                <strong>Date</strong>
                                <span class="mb-0">07 August 2020</span>
                            </li>
                            -->
                        </ul>
                    </div>

                    <div class="card-footer pt-0 pb-0 text-center">
                        <div class="row">
                            <!-- Course Years (years to what?)
                            <div class="col-4 pt-3 pb-3 border-right">
                                <h3 class="mb-1 text-primary">07</h3>
                                <span>Years</span>
                            </div>
                            -->
                            <div class="col-4 pt-3 pb-3 border-right">
                                <h3 class="mb-1 text-primary">
                                    @(Model.Students.Count)
                                </h3>
                                <span>Students</span>
                            </div>
                            <!-- Course Batches (no idea what this is)
                            <div class="col-4 pt-3 pb-3">
                                <h3 class="mb-1 text-primary">05</h3>
                                <span>Batches</span>
                            </div>
                            -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-xxl-8 col-lg-8">
        <div class="card">
            <div class="card-body">
                <!-- Edit button ? ? ?
                 <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
                -->
                <h4 class="text-primary">Course Information</h4>
                <div class="row mb-4 pt-3">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Name) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Name)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Code) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Code)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Description) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Duration) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.FormattedDuration)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.Price) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.Price)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.ApplicationOpenDate) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.ApplicationOpenDate)</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                        <h5 class="f-w-500">
                            @Html.DisplayNameFor(model => model.ApplicationCloseDate) <span class="pull-right">:</span>
                        </h5>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-6 col-6">
                        <span>@Html.DisplayFor(model => model.ApplicationCloseDate)</span>
                    </div>
                </div>
                @if (Model!.Categories.Count > 0)
                {
                    <h4 class="text-primary">Course Departments</h4>
                    <div class="profile-skills pt-2 border-bottom-1 pb-2">
                        @foreach (var item in Model!.Categories)
                        {
                            <a class="btn btn-outline-dark btn-rounded px-4 my-3 my-sm-0 mr-3 m-b-10" asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>