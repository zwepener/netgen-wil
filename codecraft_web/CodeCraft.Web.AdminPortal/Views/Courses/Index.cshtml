@model IEnumerable<CodeCraft.Data.Models.Course>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>All Courses</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">Courses</a>
            </li>
            <li class="breadcrumb-item active">
                <a asp-action="Index">All</a>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row tab-content">
            <div id="list-view" class="tab-pane fade active show col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">All Courses</h4>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="la la-plus-circle"></i> Add Course
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Code)</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Course course in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Id)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@course.Id">
                                                    @Html.DisplayFor(modelItem => course.Name)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => course.Code)
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                                    <i class="la la-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">
                                                    <i class="la la-trash-o"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script src="~/js/plugins-init/datatables.init.js"></script>
}