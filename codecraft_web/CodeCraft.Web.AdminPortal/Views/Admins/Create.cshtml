@model Admin

@{
    ViewData["Title"] = "Create Admin";
}

<partial name="_BreadCrumbPartial" model="@(new BreadCrumbViewModel
{
    Header = "Create Admin",
    SectionName = "Admins",
    ActiveName = "Create"
})" />

<div class="row">
    <div class="col-xl-12 col-xxl-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Basic Info</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                            <div class="form-group">
                                <label asp-for="UserId" class="form-label">User Email</label>
                                <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <button type="submit" value="Create" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
