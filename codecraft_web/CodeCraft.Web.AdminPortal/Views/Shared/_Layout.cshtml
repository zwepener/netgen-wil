<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>@ViewData["Title"] - CodeCraft Admin</title>

        <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" />
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />

        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

        @RenderSection("Styles", required: false)
    </head>
    <body>
        <div id="preloader">
            <div class="sk-three-bounce">
                <div class="sk-child sk-bounce1"></div>
                <div class="sk-child sk-bounce2"></div>
                <div class="sk-child sk-bounce3"></div>
            </div>
        </div>
        <div id="main-wrapper">
            <div class="nav-header">
                <a href="index.html" class="brand-logo">
                    <img class="logo-abbr" src="~/images/brand/logo-white.png" alt="" />
                    <img class="logo-compact" src="~/images/brand/logo-text-white.png" alt="" />
                    <img class="brand-title" src="~/images/brand/logo-text-white.png" alt="" />
                </a>

                <div class="nav-control">
                    <div class="hamburger">
                        <span class="line"></span><span class="line"></span><span class="line"></span>
                    </div>
                </div>
            </div>
            <div class="header">
                <div class="header-content">
                    <nav class="navbar navbar-expand">
                        <div class="collapse navbar-collapse justify-content-between">
                            <div class="header-left">
                                <div class="search_bar dropdown">
                                    <span class="search_icon p-3 c-pointer" data-toggle="dropdown">
                                        <i class="mdi mdi-magnify"></i>
                                    </span>
                                    <div class="dropdown-menu p-0 m-0">
                                        <form>
                                            <input class="form-control" type="search" placeholder="Search" aria-label="Search" />
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <ul class="navbar-nav header-right">
                                <partial name="_LoginPartial" />
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="dlabnav">
                <div class="dlabnav-scroll">
                    <ul class="metismenu" id="menu">
                        <li class="nav-label first">Dashboard</li>
                        <li>
                            <a asp-controller="Dashboard" asp-action="Index" aria-expanded="false">
                                <i class="la la-home"></i>
                                <span class="nav-text">
                                    Dashboard
                                </span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Inquiries" asp-action="Index">
                                <i class="la la-clipboard"></i>
                                <span class="nav-text">
                                    Inquiries
                                </span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Testimonials" asp-action="Index">
                                <i class="la la-newspaper-o"></i>
                                <span class="nav-text">
                                    Testimonials
                                </span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="CourseApplications" asp-action="Index">
                                <i class="la la-clipboard"></i>
                                <span class="nav-text">
                                    Course Applications
                                </span>
                            </a>
                        </li>
                        <li class="nav-label">Management</li>
                        <li>
                            <a asp-controller="Users" asp-action="Index" class="has-arrow" aria-expanded="false">
                                <i class="la la-user"></i>
                                <span class="nav-text">
                                    Users
                                </span>
                            </a>
                            <ul aria-expanded="false">
                                <li>
                                    <a asp-controller="Users" asp-action="Index">
                                        All Users
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Users" asp-action="Create">
                                        Create User
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Instructors" asp-action="Index" class="has-arrow" aria-expanded="false">
                                <i class="la la-user-tie"></i>
                                <span class="nav-text">
                                    Instructors
                                </span>
                            </a>
                            <ul aria-expanded="false">
                                <li>
                                    <a asp-controller="Instructors" asp-action="Index">
                                        All Instructors
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Instructors" asp-action="Create">
                                        Create Instructor
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Students" asp-action="Index" class="has-arrow" aria-expanded="false">
                                <i class="la la-graduation-cap"></i>
                                <span class="nav-text">
                                    Students
                                </span>
                            </a>
                            <ul aria-expanded="false">
                                <li>
                                    <a asp-controller="Students" asp-action="Index">
                                       All Students
                                   </a>
                                </li>
                                <li>
                                    <a asp-controller="Students" asp-action="Create">
                                        Create Student
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Courses" asp-action="Index" class="has-arrow" aria-expanded="false">
                                <i class="la la-book"></i>
                                <span class="nav-text">
                                    Courses
                                </span>
                            </a>
                            <ul aria-expanded="false">
                                <li>
                                    <a asp-controller="Courses" asp-action="Index">
                                        All Courses
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Courses"  asp-action="Create">
                                        Create Course
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-controller="Departments" asp-action="Index" class="has-arrow" aria-expanded="false">
                                <i class="la la-building"></i>
                                <span class="nav-text">
                                    Departments
                                </span>
                            </a>
                            <ul aria-expanded="false">
                                <li>
                                    <a asp-controller="Departments" asp-action="Index">
                                        All Departments
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Departments" asp-action="Create">
                                        Create Department
                                    </a>
                                </li>
                            </ul>
                        </li>
                    
                    </ul>
                </div>
            </div>
            <div class="content-body">
                <div class="container-fluid">
                    <!-- Content Entrypoint -->
                    @RenderBody()
                </div>
            </div>

            <div class="footer">
                <div class="copyright">
                    <p>
                        Copyright &copy; Designed &amp; Developed by
                        <a asp-controller="Dashboard" asp-action="Index">
                            SomeTeamAtCTU
                        </a>
                        2024
                    </p>
                </div>
            </div>
        </div>

        <script src="~/lib/global/global.min.js"></script>
        <script src="~/lib/svganimation/vivus.min.js"></script>
        <script src="~/lib/svganimation/svg.animation.js"></script>
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

        <script src="~/js/plugins-init/datatables.init.js"></script>
        <script src="~/js/custom.min.js"></script>
        <script src="~/js/dlabnav-init.js"></script>
        <script src="~/js/styleSwitcher.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
