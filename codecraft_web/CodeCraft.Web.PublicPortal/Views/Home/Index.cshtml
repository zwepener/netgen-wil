@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- HERO SECTION-->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center justify-content-between g-5">
            <!-- Left Text Content -->
            <div class="col-lg-5">
                <h1>Unlock your Coding Potential with </h1>
                <h1>
                    <span class="text-highlight">
                        CodeCraft_
                    </span>
                </h1>
                <p class="lead">
                    Learn programming from industry experts and take your skills to the next level.
                </p>
                <a asp-controller="Courses" asp-action="Index" class="colored-btn mt-1">
                    Apply Now
                </a>
            </div>
            <!-- Right Image Content-->
            <div class="col-lg-5 text-center">
                <img src="~/images/Hero.png" alt="Hero Image" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- COUNTER SECTION -->
<section class="counter-section py-5">
    <div class="container">
        <div class="row justify-content-center g-4">
            <!-- Counter 1 -->
            <div class="col-md-3 d-flex justify-content-center">
                <div class="counter-box">
                    <div class="counter-container">
                        <span class="counter" data-target="1500">0</span>
                        <span class="suffix">+</span>
                    </div>
                    <p>Students Trained</p>
                </div>
            </div>
            <!-- Counter 2 -->
            <div class="col-md-3 d-flex justify-content-center">
                <div class="counter-box">
                    <div class="counter-container">
                        <span class="counter" data-target="95">0</span>
                        <span class="suffix">%</span>
                    </div>
                    <p>Student Satisfaction Rate</p>
                </div>
            </div>
            <!-- Counter 3 -->
            <div class="col-md-3 d-flex justify-content-center">
                <div class="counter-box">
                    <div class="counter-container">
                        <span class="counter" data-target="200">0</span>
                        <span class="suffix">+</span>
                    </div>
                    <p>Real-World Projects Completed</p>
                </div>
            </div>
            <!-- Counter 4 -->
            <div class="col-md-3 d-flex justify-content-center">
                <div class="counter-box">
                    <div class="counter-container">
                        <span class="counter" data-target="85">0</span>
                        <span class="suffix">%</span>
                    </div>
                    <p>Employment Success Rate</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT US SECTION -->
<section class="about-us-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
