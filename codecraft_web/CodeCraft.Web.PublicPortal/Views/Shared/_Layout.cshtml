<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - CodeCraft</title>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

        <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

        @await RenderSectionAsync("Styles", required: false)
    </head>
    <body>
        <!-- HEADER -->
        <header class="main-header">
            <nav class="navbar navbar-expand-lg px-5">
                <div class="container">
                    <!-- BRAND NAME-->
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <img src="~/images/brand/logo.svg" alt="CodeCraft Logo" />
                        <h4 class="mb-0"><span class="fw-bold">Code</span>Craft</h4>
                    </a>

                    <!-- TOGGLER BUTTON -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapse-toggle">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <!-- MENU -->
                    <div class="collapse navbar-collapse" id="navbar-collapse-toggle">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Courses" asp-action="Index" class="nav-link">
                                    Courses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Instructors" asp-action="Index" class="nav-link">
                                    Instructors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="About" class="nav-link">
                                    About
                                </a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div>
            @RenderBody()
        </div>
        <footer>
            <!-- FOOTER -->
            <div class="footer-container container py-5">
                <div class="row align-items-start">
                    <!-- Logo Section -->
                    <div class="col-lg-4 col-md-6 mb-4 footer-logo pe-lg-5">
                        <div class="d-flex align-items-center">
                            <img src="~/images/brand/logo.svg" alt="CodeCraft Logo" class="img-fluid" style="height: 80px; margin-right: 15px;">
                            <span class="logo-name"><strong>CODE</strong>CRAFT</span>
                        </div>
                        <p class="mt-3">
                            Unlock your coding potential with CodeCraft today!
                        </p>
                        <a asp-area="Identity" asp-page="/Account/Register" class="colored-btn mb-3">Register</a>
                        <div class="social-icons d-flex mt-3">
                            <a href="#" class="me-3">
                                <i class='bx bxl-facebook-circle'></i>
                            </a>
                            <a href="#" class="me-3">
                                <i class='bx bxl-instagram-alt'></i>
                            </a>
                            <a href="#" class="me-3">
                                <i class='bx bxl-twitter'></i>
                            </a>
                            <a href="#"><i class='bx bxl-youtube'></i></a>
                        </div>
                    </div>
                    <!-- Links Section -->
                    <div class="col-lg-8 col-md-6 footer-links">
                        <div class="row">
                            <div class="col-md-3 col-6 mb-4 footer-column">
                                <h4 class="fw-bold">COURSES</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <a asp-controller="Courses" asp-action="Index">
                                            Courses
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-3 col-6 mb-4 footer-column">
                                <h4 class="fw-bold">OUR TEAM</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <a asp-controller="Instructors" asp-action="Index">
                                            Instructors
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-3 col-6 mb-4 footer-column">
                                <h4 class="fw-bold">HELP</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <a asp-controller="Home" asp-action="About">
                                            About
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-3 col-6 mb-4 footer-column">
                                <h4 class="fw-bold">LOGIN</h4>
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Environment.GetEnvironmentVariable("STUDENT_PORTAL_URL")">
                                            Student Portal
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Environment.GetEnvironmentVariable("ADMIN_PORTAL_URL")">
                                            Admin Portal
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer Bottom -->
            <div class="footer-bottom py-3">
                <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
                    <p class="mb-2 mb-md-0">© 2024 CodeCraft. All rights reserved.</p>
                    <div class="footer-policies d-flex">
                        <a href="#" class="text-decoration-none me-3">Privacy Policy</a>
                        <a href="#" class="text-decoration-none me-3">Terms of Service</a>
                        <a href="#" class="text-decoration-none">Cookie Policy</a>
                    </div>
                </div>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

        <script src="~/js/script.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
