@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="/css/style2.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <!-- Background Image -->
    <img class="wave" src="/img/wave2.png" alt="Background Wave Image">

    <div class="container">
        <!-- Left Side Image -->
        <div class="img">
            <img src="/img/CodeCraft Logo.svg" alt="CodeCraft Logo">
        </div>

        <!-- Login Content -->
        <div class="login-content">
            <form method="post">
                <!-- Avatar Image -->
                <img src="/img/avatar.svg" alt="User Avatar">
                <h2 class="title">Welcome</h2>

                <!-- Email Input -->
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Username</h5>
                        <input asp-for="Input.Email" type="text" class="input" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Password Input -->
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Password</h5>
                        <input asp-for="Input.Password" type="password" class="input" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Forgot Password Link -->
                <a href="#">Forgot Password?</a>

                <!-- Login Button -->
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>

    <!-- JavaScript -->
    <script type="text/javascript" src="/js/main.js"></script>
</body>
</html>
