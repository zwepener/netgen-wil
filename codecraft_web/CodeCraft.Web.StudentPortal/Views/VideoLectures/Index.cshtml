@{
    ViewData["Title"] = "Video Lectures";
}

@section Styles {
    <link href="~/css/video_lectures.css" rel="stylesheet" type="text/css" />
}

<!-- Main content for Video Lectures -->
<div class="main-content">
    <div class="header">
        <div class="logo">
            <h2>CODECRAFT</h2>
        </div>
