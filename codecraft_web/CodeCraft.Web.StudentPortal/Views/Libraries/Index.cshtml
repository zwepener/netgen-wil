@{
    ViewData["Title"] = "Libraries";
}

@section Styles {
    <link href="~/css/libraries.css" rel="stylesheet" type="text/css" />
}

<!-- Main Content Area -->
<div class="main-content">
    <div class="header">
        <h1>Welcome to the Libraries Section</h1>
    </div>

    <!-- Libraries Overview -->
    <div class="libraries-overview">
        <h2>Available Libraries</h2>
        <div class="library-list">
            <div class="library-card animate">
                <h3>Course Material</h3>
                <p>A collection of modules and packages.</p>
            </div>
            <div class="library-card animate">
                <h3>Video Lectures</h3>
                <p>Lectures recorded and ready to watch!</p>
            </div>
        </div>
    </div>

    <!-- Exam/Quiz Board -->
    <div class="exam-board">
        <h2>Library Usage Statistics</h2>
        <table>
            <tr>
                <th>Library Name</th>
                <th>Last Accessed</th>
                <th>Times Used</th>
            </tr>
            <tr>
                <td>Python Standard Library</td>
                <td>August 1, 2024</td>
                <td>10 times</td>
            </tr>
            <tr>
                <td>NumPy</td>
                <td>August 3, 2024</td>
                <td>8 times</td>
            </tr>
            <tr>
                <td>Pandas</td>
                <td>August 2, 2024</td>
                <td>12 times</td>
            </tr>
            <tr>
                <td>Matplotlib</td>
                <td>August 4, 2024</td>
                <td>6 times</td>
            </tr>
        </table>
    </div>
</div>

<!-- Right Sidebar -->
<div class="right-sidebar">
    <div class="calendar">
        <h2>August 2024</h2>
        <div id="calendar"></div>
    </div>
</div>
