@{
    ViewData["Title"] = "Profile Management";
}

@section Styles {
    <link href="~/css/profile_management.css" rel="stylesheet" type="text/css" />
}

<div class="header">
    <h1>Profile Management</h1>
    <div class="profile-icon">
        <img src="~/assets/profile-icon.png" alt="Profile Icon" />
    </div>
</div>

<!-- Profile Information Section -->
<div class="profile-section">
    <h2>Personal Information</h2>
    <form class="profile-form">
        <label for="name">Name:</label>
        <input type="text"
               id="name"
               name="name"
               value="[StudentName]"
               class="animate" />

        <label for="email">Email:</label>
        <input type="email"
               id="email"
               name="email"
               value="student@example.com"
               class="animate" />

        <label for="password">Password:</label>
        <input type="password"
               id="password"
               name="password"
               value="********"
               class="animate" />

        <label for="phone">Phone Number:</label>
        <input type="tel"
               id="phone"
               name="phone"
               value="(123) 456-7890"
               class="animate" />

        <button type="submit" class="animate">Save Changes</button>
    </form>
</div>

